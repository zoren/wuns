[external-func store [i32 i32] []]

[func fill [p w h color]
  [let
    [end [add p [mul [i32 4] [mul w h]]]
     acolor [bitwise-ior color [i32 -16777216]]]
    [loop [q p]
      [if [lt q end]
        [let []
          [store q acolor]
          [continue q [add q [i32 4]]]]
        []]]]]

[export fill]
