[defn all [l pred]
  [[func go [i]
    [if [lt-s i [size l]]
      [if [pred [at l i]]
        [go [inc i]]
        false]
      true]]
    0]]

[defn exists [l pred]
  [[func go [i]
    [if [lt-s i [size l]]
      [if [pred [at l i]]
        true
        [go [inc i]]]
      false]]
    0]]

